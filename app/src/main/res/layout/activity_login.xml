<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayn.elevatorapplication.LoginActivity"
    android:orientation="vertical"
    android:background="@mipmap/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="@dimen/sp_18"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp_5"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_85"
        >
        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher_round"
            android:padding="@dimen/dp_5"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_3"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/login_name"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="@dimen/sp_12"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp_5"
                android:background="@drawable/reg_bg"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_3"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/login_passwd"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="@dimen/sp_12"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp_5"
                android:background="@drawable/reg_bg"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:padding="@dimen/dp_10"
            >
            <CheckBox
                android:id="@+id/login_rember"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
               android:text="记住密码"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_3"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                />
            <CheckBox
                android:id="@+id/login_auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:gravity="center_vertical"
                android:text="自动登录"
               />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_15"
            android:gravity="center">
            <TextView
                android:id="@+id/login_loginbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:background="@drawable/yzm_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_80"
            android:paddingRight="@dimen/dp_80"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login_reg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册账号"
                android:gravity="center"
                android:padding="@dimen/dp_10"
               />
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_10"
                android:background="@color/gray"
                android:padding="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"/>
            <TextView
                android:id="@+id/login_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="游客登录"
                android:gravity="center"
                android:padding="@dimen/dp_10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
