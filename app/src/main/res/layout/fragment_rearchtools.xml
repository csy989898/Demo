<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.example.mayn.elevatorapplication.View.WheelView
                android:id="@+id/main_wv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tools_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:padding="@dimen/dp_3"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/txtbg"
                android:text="默纳克"/>
            <TextView
                android:id="@+id/tools_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:padding="@dimen/dp_3"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/txtbg"
                android:layout_margin="@dimen/dp_10"
                android:text="MCTC-MCB-G2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:orientation="horizontal"
                android:gravity="center">
                <Spinner
                    android:id="@+id/spinner_tools"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="6"
                    android:background="@drawable/txtbg"
                    android:layout_height="@dimen/dp_30"
                    android:entries="@array/rearch"
                    android:padding="@dimen/dp_3">

                </Spinner>
                <Button
                    android:id="@+id/rearch_btn"
                    android:layout_width="@dimen/dp_0"
                    android:padding="@dimen/dp_3"
                    android:layout_weight="2"
                    android:text="查询"
                    android:layout_margin="@dimen/dp_2"
                    android:background="@color/back"
                    android:layout_height="@dimen/dp_30" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/txtbg"
                android:padding="@dimen/dp_5"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:text="故障说明"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_gray"
                    android:layout_margin="@dimen/dp_5"/>
                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_5"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/text_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:text="处理建议"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_gray"
                    android:layout_margin="@dimen/dp_5"/>
                <TextView
                    android:id="@+id/text_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/text_gray"
                    android:padding="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"/>

            </LinearLayout>

            </LinearLayout>
    </ScrollView>

</LinearLayout>
